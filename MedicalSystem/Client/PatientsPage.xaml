<UserControl x:Class="Client.PatientsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F0F0F0" Padding="10" CornerRadius="4" Margin="0,0,0,10">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Расширенный поиск" Margin="0,10,10,0" Padding="15,5"/>
                    <Button Content="Новый пациент" Background="#0078D7" Foreground="White"
                            Padding="15,5" Click="NewPatient_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <DatePicker x:Name="DateFromPicker" SelectedDateChanged="DateFilter_Changed" Margin="0,0,10,0" Width="120"/>
                    <DatePicker x:Name="DateToPicker" SelectedDateChanged="DateFilter_Changed" Margin="0,0,10,0" Width="120"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <DataGrid x:Name="MainPatientsDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  GridLinesVisibility="All"
                  BorderBrush="DarkGray"
                  BorderThickness="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер карты" Binding="{Binding CardNumber}" Width="*" MinWidth="100"/>
                <DataGridTextColumn Header="ФИО" Width="2*" MinWidth="200">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} {1} {2}">
                            <Binding Path="LastName"/>
                            <Binding Path="FirstName"/>
                            <Binding Path="Patronymic"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate, StringFormat=d}" Width="*" MinWidth="120"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*" MinWidth="120"/>
                <DataGridTextColumn Header="Пол" Binding="{Binding Gender}" Width="*" MinWidth="70"/>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedDate, StringFormat=d}" Width="*" MinWidth="120"/>
                <!-- Отдел, Запись и Заболевание удалены, т.к. их нет в классе Patient -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
