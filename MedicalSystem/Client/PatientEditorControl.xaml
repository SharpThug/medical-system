<UserControl x:Class="Client.PatientEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Редактор пациента" FontWeight="Bold" FontSize="16"/>
            <TextBox x:Name="NameBox"  Margin="0,10,0,0"/>
            <Button Content="Сохранить" Margin="0,10,0,0" Click="Save_Click"/>
            <Button Content="Закрыть" Margin="0,5,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
