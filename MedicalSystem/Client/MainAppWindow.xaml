<Window x:Class="Client.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Медицинская система" Height="700" Width="1200">

    <Window.Resources>
        <!-- Стиль для вкладок в стиле браузера -->
        <Style x:Key="BrowserTabStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Name="Root">
                            <Border Name="Border" Background="LightGray" 
                                    BorderBrush="DarkGray" BorderThickness="1,1,1,0"
                                    CornerRadius="6,6,0,0" Margin="2,0,0,0">
                                <ContentPresenter x:Name="ContentSite"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    ContentSource="Header"
                                    Margin="10,5,10,5"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Для кнопки + -->
            <ColumnDefinition Width="*"/>
            <!-- Основное содержимое -->
        </Grid.ColumnDefinitions>

        <!-- Панель вкладок -->
        <TabControl x:Name="MainTabControl" Grid.Column="1"
                    TabStripPlacement="Top"
                    Margin="10"
                    SelectedIndex="0">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource BrowserTabStyle}"/>
            </TabControl.Resources>

            <!-- Вкладка Пациенты -->
            <TabItem Header="Пациенты">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Заголовок -->
                            <RowDefinition Height="Auto"/>
                            <!-- Период -->
                            <RowDefinition Height="Auto"/>
                            <!-- Имя пациента -->
                            <RowDefinition Height="*"/>
                            <!-- DataGrid + кнопки -->
                        </Grid.RowDefinitions>

                        <!-- Заголовок -->
                        <TextBlock Grid.Row="0" Text="Пациенты" 
                                   FontSize="20" FontWeight="Bold" 
                                   Margin="0,0,0,10"/>

                        <!-- Период -->
                        <Border Grid.Row="1" Background="#F0F0F0" 
                                Padding="10" CornerRadius="4">
                            <TextBlock>
                                <Run Text="Период с "/>
                                <Run Text="13.01.2026"/>
                                <Run Text=" по "/>
                                <Run Text="13.02.2026"/>
                            </TextBlock>
                        </Border>

                        <!-- Имя пациента -->
                        <TextBlock Grid.Row="2" Text="Иванов Иван" 
                                   FontSize="16" FontWeight="SemiBold"
                                   Margin="0,10,0,10"/>

                        <!-- DataGrid + кнопки -->
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- DataGrid растягивается -->
                                <RowDefinition Height="Auto"/>
                                <!-- Кнопки -->
                            </Grid.RowDefinitions>

                            <!-- Таблица пациентов -->
                            <DataGrid x:Name="MainPatientsDataGrid"
                                      Grid.Row="0"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      GridLinesVisibility="All"
                                      BorderBrush="DarkGray"
                                      BorderThickness="1"
                                      Margin="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Номер карты" Binding="{Binding CardNumber}" Width="120"/>
                                    <DataGridTextColumn Header="Запись" Binding="{Binding AppointmentDate}" Width="100"/>
                                    <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="250"/>
                                    <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate}" Width="120"/>
                                    <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                                    <DataGridTextColumn Header="Пол" Binding="{Binding Gender}" Width="80"/>
                                    <DataGridTextColumn Header="Отдел" Binding="{Binding Department}" Width="150"/>
                                    <DataGridTextColumn Header="Заболевание" Binding="{Binding Diagnosis}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Кнопки -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button Content="Расширенный поиск" Margin="0,0,10,0" Padding="15,5"/>
                                <Button Content="Новый пациент" Background="#0078D7" Foreground="White" Padding="15,5"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка Записи -->
            <TabItem Header="Записи">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <TextBlock Text="Содержимое вкладки Записи" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Вкладка Отчеты -->
            <TabItem Header="Отчеты">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <TextBlock Text="Содержимое вкладки Отчеты" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Кнопка "Новая вкладка" -->
        <Button Grid.Column="0" Content="+" 
                Width="30" Height="30"
                FontSize="16"
                HorizontalAlignment="Left"
                Margin="5,5,0,0"
                Click="AddNewTab_Click"
                ToolTip="Новая вкладка"/>
    </Grid>
</Window>