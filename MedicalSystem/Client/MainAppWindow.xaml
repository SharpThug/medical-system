<Window x:Class="Client.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Медицинская система" Height="700" Width="1200">

    <Window.Resources>
        <!-- Стиль для вкладок в стиле браузера -->
        <Style x:Key="BrowserTabStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Name="Root">
                            <Border Name="Border" Background="LightGray" 
                                    BorderBrush="DarkGray" BorderThickness="1,1,1,0"
                                    CornerRadius="6,6,0,0" Margin="2,0,0,0">
                                <ContentPresenter x:Name="ContentSite"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    ContentSource="Header"
                                    Margin="10,5,10,5"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="1129*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель вкладок сверху -->
        <TabControl x:Name="MainTabControl" Grid.Row="0" 
                    TabStripPlacement="Top"
                    Margin="10,10,10,54"
                    SelectedIndex="0" Grid.ColumnSpan="2">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource BrowserTabStyle}"/>
            </TabControl.Resources>

            <TabItem Header="Пациенты">
                <!-- Содержимое вкладки Пациенты -->
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Grid.Row="0" Text="Пациенты" 
                               FontSize="20" FontWeight="Bold" 
                               Margin="0,0,0,10"/>

                    <!-- Период -->
                    <Border Grid.Row="1" Background="#F0F0F0" 
                            Padding="10" CornerRadius="4">
                        <TextBlock>
                            <Run Text="Период с "/>
                            <Run Text="13.01.2026"/>
                            <Run Text=" по "/>
                            <Run Text="13.02.2026"/>
                        </TextBlock>
                    </Border>

                    <!-- Имя пациента -->
                    <TextBlock Grid.Row="2" Text="Иванов Иван" 
                               FontSize="16" FontWeight="SemiBold"
                               Margin="0,10,0,10"/>

                    <!-- Таблица пациентов -->
                    <DataGrid Grid.Row="3" 
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер карты" 
                                                Binding="{Binding CardNumber}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Запись" 
                                                Binding="{Binding AppointmentDate}"
                                                Width="100"/>
                            <DataGridTextColumn Header="ФИО" 
                                                Binding="{Binding FullName}"
                                                Width="250"/>
                            <DataGridTextColumn Header="Дата рождения" 
                                                Binding="{Binding BirthDate}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Телефон" 
                                                Binding="{Binding Phone}"
                                                Width="150"/>
                            <DataGridTextColumn Header="Пол" 
                                                Binding="{Binding Gender}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Отдел" 
                                                Binding="{Binding Department}"
                                                Width="150"/>
                            <DataGridTextColumn Header="Заболевание" 
                                                Binding="{Binding Diagnosis}"
                                                Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Кнопки поиска и нового пациента -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Расширенный поиск" 
                                Margin="0,0,10,0"
                                Padding="15,5"/>
                        <Button Content="Новый пациент" 
                                Background="#0078D7"
                                Foreground="White"
                                Padding="15,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Можно добавить другие вкладки -->
            <TabItem Header="Записи">
                <Grid>
                    <TextBlock Text="Содержимое вкладки Записи" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="Отчеты">
                <Grid>
                    <TextBlock Text="Содержимое вкладки Отчеты" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

        </TabControl>

        <!-- Кнопка "Новая вкладка" как в браузере -->
        <Button Grid.Row="0" Content="+" 
                Width="30" Height="30"
                FontSize="16"
                HorizontalAlignment="Left"
                Margin="5,100,0,139"
                Click="AddNewTab_Click"
                ToolTip="Новая вкладка"/>
    </Grid>
</Window>