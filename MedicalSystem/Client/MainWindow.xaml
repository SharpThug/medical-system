<Window x:Class="Client.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Client"
        MinHeight="600"
        MinWidth="1000"
        WindowState="Maximized">

    <WindowChrome.WindowChrome>
        <WindowChrome
            GlassFrameThickness="0"
            CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Стиль для вкладок в стиле браузера -->
        <Style x:Key="BrowserTabStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid Name="Root">
                            <Border Name="Border" Background="LightGray" 
                                    BorderBrush="DarkGray" BorderThickness="1,1,1,0"
                                    CornerRadius="6,6,0,0" Margin="2,0,0,0">
                                <ContentPresenter x:Name="ContentSite"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    ContentSource="Header"
                                    Margin="10,5,10,5"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    
    <Border BorderBrush="DarkGray" BorderThickness="2" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <!-- шапка -->
                <RowDefinition Height="40"/>
                <!-- TabControl -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#0078D7">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- Drag зона -->
                        <ColumnDefinition Width="*"/>
                        <!-- кнопки шапки-->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Drag зона -->
                    <Grid Grid.Column="0" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                        <TextBlock Text="МИС ОКО"
                                   Foreground="White"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="10,10,0,0"/>
                    </Grid>

                    <!-- Кнопки шапки-->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Stretch" Margin="0,0,10,1">
                        <TextBlock Text="Иван Иванов"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <Button Content="⋮" Width="30" Height="27"
                                Background="Transparent" Foreground="White" BorderThickness="0"/>
                        <Button Content="–" Width="30" Height="27"
                                Background="Transparent" Foreground="White" BorderThickness="0"
                                Click="MinimizeButton_Click"/>
                        <Button Content="□" Width="30" Height="27"
                                Background="Transparent" Foreground="White" BorderThickness="0"
                                Click="MaximizeButton_Click"/>
                        <Button Content="✕" Width="30" Height="27"
                                Background="Transparent" Foreground="White" BorderThickness="0"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>


            <TabControl Grid.Row="1"
                        x:Name="MainTabControl"
                        TabStripPlacement="Top"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        SelectedIndex="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem" BasedOn="{StaticResource BrowserTabStyle}"/>
                </TabControl.Resources>

                <!-- Вкладка Пациенты -->
                <TabItem Header="Пациенты">
                    <local:PatientsPage x:Name="PatientsPageControl"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
